---
import "../styles/reset.css";
import "../styles/font.css";
import "../styles/colors.css";
import "../styles/typography.css";
import "../styles/accessibility.css";

import "../components/layout/container.css";
import "../components/layout/button.css";

import "../components/index/customer-item.css";
import "../components/index/customer.css";
import "../components/index/hero.css";
import "../components/index/hero-service-item.css";
import "../components/index/our-services.css";
import "../components/index/some-numbers.css";
import "../components/index/some-numbers-item.css";

import "../components/global/contact-form.css";
import "../components/global/input.css";
import "../components/global/page-title.css"
import "../components/global/team.css"
import "../components/global/team-item.css"
import "../components/global/video.css"

import "../components/our-services/service-item.css"

import "../components/our-history/our-history-item.css"

import "../components/blog/blog.css"
import "../components/blog/blog-thumbnail.css"
import "../components/layout/blog-post.css"
import "../components/blog/paginate.css"

import "swiper/css/bundle";



import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
interface Meta {
  title: string;
  description: string;
  image: string;
}
interface Props {
  meta: Meta;
}
const { meta } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#af0000" />

    <title>{meta.title}</title>
    <meta name="title" content={meta.title} />
    <meta name="description" content={meta.description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={meta.title} />
    <meta property="og:description" content={meta.description} />
    <meta property="og:image" content={meta.image} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={meta.title} />
    <meta property="twitter:description" content={meta.description} />
    <meta property="twitter:image" content={meta.image} />
    <script src="../components/global/team.js"></script>
    <script>
      import "../animations/container-icons.js"
      import "../animations/blog-thumbnail.js"
      import "../components/global/contact-form.js"
      import "../animations/hero.js"
      import "../animations/services.js"
      import "../animations/customers.js"
      import {loadSwiper} from "../components/global/team.js"
      import {launchCounter} from "../components/index/some-numbers.js"
      loadSwiper()
      launchCounter()
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style scoped>
  body{
    display:flex;
    flex-direction:column;
    justify-content:space-between;
    min-height: 100vh;
  }
  main {
    margin-top: 90px;
    flex:1;
  }
  .no-scroll {
    overflow: hidden;
  }
</style>
