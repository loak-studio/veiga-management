---
import type { StoryblokClient } from "@storyblok/js";
import { storyblokApi } from "../../utils/storyblok";
import { sortLinks } from "../../utils/sort-multi-select";
const config = async () => {
    const { data } = await (storyblokApi as StoryblokClient).get(
        "cdn/stories/configuration",
        {
            version: "draft",
            resolve_relations: "Navigation",
        }
    );
    return data;
};

const data = await config();
const content = data.story.content;
const rels = data.rels;
const sortedLinks = sortLinks(content.navigation, rels);

const isHome = (slug: string) => {
    if (slug == "home") {
        return true;
    }
    return false;
};

const isActive = (slug: string) => {
    if (slug == "home") {
        slug = "/";
    }
    if (Astro.url.pathname == slug) {
        return true;
    }
    return false;
};
---

<div class="header__container">
    <header class="header">
        <a href="/">
            <img class="header__logo" src={content.logo.filename} alt="" />
        </a>
        <nav class="header__nav">
            <ul class="nav__list">
                {
                    sortedLinks.map((link: any) => (
                        <li class="nav__item">
                            <a
                                class:list={[
                                    "nav__link",
                                    "h6",
                                    isActive(link.full_slug)
                                        ? "nav__link--active"
                                        : null,
                                ]}
                                href={
                                    isHome(link.full_slug)
                                        ? "/"
                                        : "/" + link.full_slug
                                }
                            >
                                {link.name}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </nav>
    </header>
</div>

<style scoped>
    .header__container {
        position: fixed;
        width: 100%;
        background: var(--background);
        top: 0;
    }
    .header {
        max-width: 1280px;
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        margin: 0 auto;
        padding: 16px 80px;
    }
    .header__logo {
        width: 120px;
        height: 60px;
    }
    .header__nav {
    }
    .nav__list {
        display: flex;
        gap: 32px;
    }
    .nav__item {
        width: fit-content;
        border-bottom: transparent 2px solid;
    }
    .nav__link {
        padding: 10px;
        text-decoration: none;
        color: var(--white);
    }
    .nav__link:hover {
        border-bottom: var(--primary) 2px solid;
    }
    .nav__link--active {
        border-bottom: var(--primary) 2px solid;
    }
</style>
