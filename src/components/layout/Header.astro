        align-items: center;
        margin: 0 auto;
        padding: 16px 80px;
    }
    .header__logo {
        width: 120px;
        height: 60px;
    }
    .nav__list {
        display: flex;
        gap: 32px;
    }
    .nav__item {
        width: fit-content;
        border-bottom: transparent 2px solid;
    }
    .nav__link {
        padding: 10px;
        text-decoration: none;
        color: var(--white);
    }
    .nav__link:hover {
        border-bottom: var(--primary) 2px solid;
    }
    .nav__link--active {
        border-bottom: var(--primary) 2px solid;
    }
    .header__hamburger{
      display: none;
    }
    @media (max-width: 1100px) {
      .hamburger-inner, .hamburger-inner::after, .hamburger-inner::before, .is-active.hamburger .hamburger-inner, .is-active.hamburger .hamburger-inner::before, .is-active.hamburger .hamburger-inner::after{
        background: white;
      }
      .header__nav{
        pointer-events: none;
        transform: translateX(100vh);
        opacity: 0;
        position: fixed;
        height: 100vh;
        width: 100vw;
        z-index: 2;
        left: 0;
        top:0;
        background: transparent;
        transition: transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
              background 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
              opacity 0.55s ease;
        
      }

      .header__nav.header__nav--active{
        pointer-events: all;
        opacity: 1;
        transform: translateX(0);
        background: var(--secondary);
      }
      .nav__list{
