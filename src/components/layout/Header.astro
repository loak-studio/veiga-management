---
import "hamburgers/dist/hamburgers.min.css"
import type { StoryblokClient } from "@storyblok/js";
import { storyblokApi } from "../../utils/storyblok";
import { sortLinks } from "../../utils/sort-multi-select";
const config = async () => {
    const { data } = await (storyblokApi as StoryblokClient).get(
        "cdn/stories/configuration",
        {
            version: "draft",
            resolve_relations: "Navigation",
        }
    );
    return data;
};

const data = await config();
const content = data.story.content;
const rels = data.rels;
const sortedLinks = sortLinks(content.navigation, rels);

const isHome = (slug: string) => {
    if (slug == "home") {
        return true;
    }
    return false;
};

const isActive = (slug: string) => {
    if (slug == "home") {
        slug = "/";
    }
    if (Astro.url.pathname == slug) {
        return true;
    }
    return false;
};
---

<script>
  const button = document.querySelector('.header__hamburger') as HTMLButtonElement
  const nav = document.querySelector('.header__nav') as HTMLElement
  const html = document.querySelector('html') as HTMLElement
  const navContainer = document.querySelector('.header__container') as HTMLElement
  button.addEventListener('click',()=>{
    nav.classList.toggle('header__nav--active')
    button.classList.toggle('is-active')
    html.classList.toggle('no-scroll')
  })

</script>

<div id="navbar" class="header__container">
    <header class="header">
        <a title="Retour Ã  l'accueil" href="/">
            <img class="header__logo" src={content.logo.filename} alt="" />
        </a>
        <nav class="header__nav">
            <ul class="nav__list">
                {
                    sortedLinks.map((link: any) => (
                        <li class="nav__item">
                            <a
                                class:list={[
                                    "nav__link",
                                    "h6",
                                    isActive(link.full_slug)
                                        ? "nav__link--active"
                                        : null,
                                ]}
                                href={
                                    isHome(link.full_slug)
                                        ? "/"
                                        : "/" + link.full_slug
                                }
                            >
                                {link.name}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </nav>
        <button title="Ouvrir le menu" class="hamburger hamburger--collapse header__hamburger" type="button">
        
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
      </button>
    </header>
</div>

<style scoped>
    .header__container {
        position: fixed;
        width: 100%;
        background: var(--background);
        top: 0;
        z-index: 5;
